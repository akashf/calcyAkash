<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akashpandey.calcyakash.MainActivity">

<TextView
    android:id="@+id/result_text_view"
    android:layout_width="357dp"
    android:layout_height="76dp"
    android:gravity="bottom|right"
    android:textSize="24sp"
    android:textColor="#000000"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/input_text_view"
    android:layout_width="360dp"
    android:layout_height="60dp"
    android:layout_marginBottom="364dp"
    android:layout_marginTop="8dp"
    android:gravity="bottom|right|end"

    android:textAppearance="@style/TextAppearance.AppCompat"
    android:textColor="#000000"
    android:textSize="30sp"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/result_text_view"
    app:layout_constraintVertical_bias="0.0" />
<Button

    android:id="@+id/zero"
    android:layout_width="92dp"
    android:layout_height="99dp"
    android:background="#000051"
    android:onClick="zero"
    android:text="0"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/dot"
    app:layout_constraintTop_toBottomOf="@+id/two"
    app:layout_constraintVertical_bias="0.0" />

<Button
    android:id="@+id/dot"
    android:layout_width="90dp"
    android:layout_height="98dp"
    android:background="#000051"
    android:text="."
    android:textColor="#ffffff"
    android:textSize="24sp"
    android:onClick="dot"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/one"
    app:layout_constraintVertical_bias="0.0" />

<Button
    android:id="@+id/equal"
    android:layout_width="91dp"
    android:layout_height="98dp"
    android:layout_margin="0dp"
    android:background="#000051"
    android:onClick="equal"
    android:text="="
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/zero"
    app:layout_constraintTop_toBottomOf="@+id/three"
    app:layout_constraintVertical_bias="0.0" />

<Button
    android:id="@+id/one"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:background="#000051"
    android:text="1"
    android:onClick="one"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/six" />

<Button
    android:id="@+id/two"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:background="#000051"
    android:text="2"
    android:onClick="two"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintStart_toEndOf="@+id/one"
    app:layout_constraintTop_toBottomOf="@+id/five" />

<Button
    android:id="@+id/three"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:background="#000051"
    android:text="3"
    android:onClick="three"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintStart_toEndOf="@+id/two"
    app:layout_constraintTop_toBottomOf="@+id/four" />

<Button
    android:id="@+id/six"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:background="#000051"
    android:text="6"
    android:onClick = "six"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/seven" />

<Button
    android:id="@+id/five"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:background="#000051"
    android:onClick="five"
    android:text="5"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintStart_toEndOf="@+id/six"
    app:layout_constraintTop_toBottomOf="@+id/eight" />

<Button
    android:id="@+id/four"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:background="#000051"
    android:onClick="four"
    android:text="4"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintEnd_toStartOf="@+id/divide"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/five"
    app:layout_constraintTop_toBottomOf="@+id/nine" />

<Button
    android:id="@+id/plus"
    android:layout_width="84dp"
    android:layout_height="74dp"
    android:layout_margin="0dp"
    android:background="#000051"
    android:text="+"
    android:onClick="plus"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toEndOf="@+id/zero"
    app:layout_constraintTop_toBottomOf="@+id/product" />

<Button
    android:id="@+id/seven"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:layout_marginTop="144dp"
    android:background="#000051"
    android:onClick="seven"
    android:text="7"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/eight"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:layout_marginTop="144dp"
    android:background="#000051"
    android:onClick="eight"
    android:text="8"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintStart_toEndOf="@+id/seven"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/nine"
    android:layout_width="91dp"
    android:layout_height="90dp"
    android:layout_marginTop="144dp"
    android:background="#000051"
    android:onClick="nine"
    android:text="9"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintStart_toEndOf="@+id/eight"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/minus"
    android:layout_width="84dp"
    android:layout_height="74dp"
    android:layout_margin="0dp"
    android:background="#000051"
    android:text="-"
    android:textColor="#ffffff"
    android:onClick="minus"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toEndOf="@+id/zero"
    app:layout_constraintTop_toBottomOf="@+id/plus"
    app:layout_constraintVertical_bias="0.0" />

<Button
    android:id="@+id/product"
    android:layout_width="84dp"
    android:onClick="product"
    android:layout_height="74dp"
    android:layout_margin="0dp"
    android:background="#000051"
    android:text="*"
    android:textColor="#ffffff"

    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toEndOf="@+id/three"
    app:layout_constraintTop_toBottomOf="@+id/divide" />

<Button
    android:id="@+id/ac"
    android:layout_width="84dp"
    android:layout_height="74dp"
    android:onClick="clear"
    android:layout_marginTop="144dp"
    android:background="#000051"
    android:text="AC"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toEndOf="@+id/nine"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/divide"
    android:layout_width="84dp"
    android:onClick="divide"
    android:layout_height="74dp"
    android:background="#000051"
    android:text="/"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ac" />

</android.support.constraint.ConstraintLayout>
